{
  "name": "trpc-api",
  "version": "0.0.1",
  "description": "Fastify Typescript Starter",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsup",
    "build:ts": "tsup --env.NODE_ENV production",
    "compile-schemas": "json2ts -i src/schemas -o src/types",
    "copy:assets": "cpy 'src/generated/*.json' dist/generated",
    "dev": "yarn compile-schemas && yarn dev:watch",
    "dev:watch": "tsx watch --clear-screen=false src/server.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "tsx src/server.ts",
    "start:prod": "node dist/server.js",
    "test": "cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@fastify/autoload": "^5.3.1",
    "@fastify/cors": "^8.1.0",
    "@fastify/helmet": "^10.0.0",
    "@fastify/multipart": "^7.1.1",
    "@fastify/sensible": "^5.1.1",
    "@fastify/swagger": "^7.5.0",
    "@sinclair/typebox": "^0.24.34",
    "@trpc/server": "^9.27.2",
    "close-with-grace": "^1.1.0",
    "fastify": "4.5.3",
    "fastify-cli": "^5.4.0",
    "fastify-plugin": "^4.2.1",
    "fastify-tsconfig": "^1.0.1",
    "graphql": "^16.6.0",
    "mercurius": "^11.0.0",
    "mercurius-codegen": "^4.0.1",
    "mercurius-integration-testing": "^5.0.0",
    "nexus": "^1.3.0",
    "zod": "^3.18.0",
    "swagger-jsdoc": "^6.2.5"
  },
  "devDependencies": {
    "@types/busboy": "1.5.0",
    "@types/node": "18.7.14",
    "@types/swagger-jsdoc": "6.0.1",
    "@types/tap": "15.0.7",
    "cross-env": "7.0.3",
    "eslint-config-prettier": "8.5.0",
    "eslint-config-xo": "0.42.0",
    "eslint-config-xo-typescript": "0.53.0",
    "fast-json-stringify": "5.3.0",
    "json-schema-to-typescript": "11.0.2",
    "tap": "16.3.0",
    "ts-node": "10.9.1",
    "tsup": "6.2.3",
    "tsx": "3.9.0",
    "typescript": "4.8.3"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs"
    ],
    "target": "es2018",
    "onSuccess": "npm run copy:assets"
  }
}