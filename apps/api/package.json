{
  "name": "trpc-api",
  "version": "0.0.1",
  "description": "Fastify Typescript Starter",
  "main": "app.ts",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "build": "tsup",
    "build:ts": "tsup --env.NODE_ENV production",
    "compile-schemas": "json2ts -i src/schemas -o src/types",
    "copy:assets": "cpy 'src/generated/*.json' dist/generated",
    "dev": "yarn compile-schemas && yarn dev:watch",
    "dev:watch": "tsx watch --clear-screen=false src/server.ts",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "start": "tsx src/server.ts",
    "start:prod": "node dist/server.js",
    "test": "cross-env TS_NODE_FILES=true tap --ts test/**/*.test.ts",
    "typecheck": "tsc -b"
  },
  "dependencies": {
    "@fastify/autoload": "5.10.0",
    "@fastify/cors": "8.5.0",
    "@fastify/helmet": "11.1.1",
    "@fastify/multipart": "7.7.3",
    "@fastify/sensible": "5.6.0",
    "@fastify/swagger": "8.15.0",
    "@sinclair/typebox": "0.34.41",
    "@trpc/server": "9.27.4",
    "close-with-grace": "1.3.0",
    "fastify": "4.29.1",
    "fastify-cli": "6.3.0",
    "fastify-plugin": "4.5.1",
    "fastify-tsconfig": "2.0.0",
    "graphql": "16.11.0",
    "mercurius": "13.4.1",
    "mercurius-codegen": "5.0.5",
    "mercurius-integration-testing": "8.2.0",
    "nexus": "1.3.0",
    "zod": "3.25.76",
    "swagger-jsdoc": "6.2.8"
  },
  "devDependencies": {
    "@types/busboy": "1.5.4",
    "@types/node": "20.19.23",
    "@types/swagger-jsdoc": "6.0.4",
    "@types/tap": "15.0.12",
    "cross-env": "7.0.3",
    "eslint-config-productsway": "1.3.4",
    "fast-json-stringify": "6.1.1",
    "json-schema-to-typescript": "13.1.2",
    "tap": "16.3.10",
    "ts-node": "10.9.2",
    "tsup": "8.5.0",
    "tsx": "4.20.6",
    "typescript": "5.9.3"
  },
  "tsup": {
    "entry": [
      "src/**/*.ts"
    ],
    "splitting": false,
    "sourcemap": true,
    "clean": true,
    "format": [
      "cjs"
    ],
    "target": "es2018",
    "onSuccess": "npm run copy:assets"
  }
}
