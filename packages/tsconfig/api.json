{
	"$schema": "https://json.schemastore.org/tsconfig",
	"display": "API",
	"extends": "./base.json",
	"compilerOptions": {
		"target": "es2018",
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"pretty": true,
		"noEmitOnError": true,
		"strict": true,
		"resolveJsonModule": true,
		"removeComments": true,
		"newLine": "lf",
		"noUnusedLocals": true,
		"noFallthroughCasesInSwitch": true,
		"useDefineForClassFields": true,
		"forceConsistentCasingInFileNames": true,
		"skipLibCheck": true,
		"lib": [
			"esnext"
		]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules"
	]
}